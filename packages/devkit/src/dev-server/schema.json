{
    "title": "DevServer Target",
    "description": "DevServer target options for Build Facade.",
    "type": "object",
    "properties": {
      "buildTarget": {
        "type": "string",
        "description": "Target to serve."
      },
      "port": {
        "type": "number",
        "description": "Port to listen on.",
        "default": 4300
      },
      "host": {
        "type": "string",
        "description": "Host to listen on.",
        "default": "localhost"
      },
      "preserveSymlinks": {
        "type": "boolean",
        "description": "Do not use the real path when resolving modules.",
        "default": false
      }
    },
    "additionalProperties": false,
    "required": [
      "buildTarget"
    ]
  }